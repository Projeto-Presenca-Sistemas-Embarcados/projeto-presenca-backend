generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum PersonType {
  STUDENT
  TEACHER
}

model Person {
  id        Int        @id @default(autoincrement())
  name      String
  type      PersonType
  tagId     String     @unique
  startTime String?

  // relations
  lessonsTaught Lesson[]        @relation("TeacherLessons")
  attendances   LessonStudent[]
}

model Lesson {
  id        Int      @id @default(autoincrement())
  room      String
  subject   String
  teacherId Int
  teacher   Person   @relation("TeacherLessons", fields: [teacherId], references: [id])
  startTime DateTime
  endTime   DateTime
  closed    Boolean  @default(false)
  opened    Boolean  @default(false)

  // students via join table
  students LessonStudent[]
}

model LessonStudent {
  id        Int     @id @default(autoincrement())
  lessonId  Int
  studentId Int
  present   Boolean @default(false)

  lesson  Lesson @relation(fields: [lessonId], references: [id])
  student Person @relation(fields: [studentId], references: [id])

  @@unique([lessonId, studentId])
}
