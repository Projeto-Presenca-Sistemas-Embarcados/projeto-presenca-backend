generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Student {
  id        Int     @id @default(autoincrement())
  name      String
  tagId     String  @unique
  startTime String?

  // relations
  attendances LessonStudent[]
}

model Teacher {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique   
  password  String      
  tagId     String  @unique
  startTime String?

  // relations
  lessonsTaught Lesson[] @relation("TeacherLessons")
}

model Lesson {
  id        Int      @id @default(autoincrement())
  room      String
  subject   String
  teacherId Int
  teacher   Teacher  @relation("TeacherLessons", fields: [teacherId], references: [id])
  startTime DateTime
  endTime   DateTime
  closed    Boolean  @default(false)
  opened    Boolean  @default(false)

  // students via join table
  students LessonStudent[]
}

model LessonStudent {
  id        Int     @id @default(autoincrement())
  lessonId  Int
  studentId Int
  present   Boolean @default(false)

  lesson  Lesson @relation(fields: [lessonId], references: [id])
  student Student @relation(fields: [studentId], references: [id])

  @@unique([lessonId, studentId])
}
